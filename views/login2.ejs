<!doctype html>
<html>

<head>
    <title> ورود </title>
    <!-- load bootstrap css -->
    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <!-- load fontawesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 80px;
        }
    </style>
</head>

<body>
    <div class="container text-center offset-3 col-6 bg-muted">
        <!-- <div class="row"> -->
            <div class="">

                <h1>
                    <span class="fa fa-sign-in"></span> ورود </h1>

                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger">
                        <%= message %>
                    </div>
                    <% } %>

                        <!-- LOGIN FORM -->
                        <form action="/login" method="post">
                            <div class="form-signin">
                                <!-- <label>Email</label> -->
                                <!-- <input type="text" class="form-control" name="email"> -->
                                <input type="text" class="form-control text-right" name="email" placeholder="ایمیل" required="" autofocus="">
                            </div>
                            <div class="form-group">
                                <!-- <label>Password</label> -->
                                <!-- <input type="password" class="form-control" name="password"> -->
                                <input type="password" class="form-control text-right" name="password" placeholder="رمز عبور" required="">
                            </div>

                            <button type="submit" class="btn col-sm-2 btn-primary btn-lg">ورود</button>
                            <!-- <button type="submit" class="btn col-sm-2 btn-lg">Signup</button> -->
                        </form>

                        <hr>

                        <p>ایجاد حساب کاربری جدید
                            <a href="/signup">ثبت نام</a>
                        <!-- </p>
                        <p>Or go
                            <a href="/">home</a>.</p> -->
            </div>
        <!-- </div> -->
    </div>
</body>
</html>